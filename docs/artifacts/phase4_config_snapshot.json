{
  "upload": {
    "max_mb": 100,
    "allowed_ext": [
      ".pdf"
    ],
    "allowed_mime": [
      "application/pdf"
    ],
    "storage": {
      "temp": "storage/uploads/tmp",
      "final": "storage/uploads/final"
    },
    "rate_limit_per_minute": 60,
    "max_bytes_effective": 104857600
  },
  "parser": {
    "ocr": {
      "enabled": true,
      "languages": [
        "eng"
      ]
    },
    "tuning": {
      "enabled": true
    },
    "efhg": {
      "weights": {
        "regex": 1.0,
        "style": 1.0,
        "entropy": 0.8,
        "graph": 1.1,
        "fluid": 0.9,
        "llm_vote": 1.0
      },
      "thresholds": {
        "header": 0.65,
        "subheader": 0.5
      },
      "stitching": {
        "adjacency_weight": 0.8,
        "entropy_join_delta": 0.15,
        "style_cont_threshold": 0.7
      }
    },
    "sequence_repair": {
      "hole_penalty": 0.4,
      "max_gap_span_pages": 2,
      "min_schema_support": 2
    }
  },
  "logging": {
    "level": "INFO",
    "json": true
  },
  "cors": {
    "allowed_origins": [
      "*"
    ],
    "allowed_methods": [
      "GET",
      "POST"
    ],
    "allowed_headers": [
      "Authorization",
      "Content-Type"
    ]
  },
  "artifact_root": "rag-app/data/artifacts"
}